<%- include('./partials/header') %>
<!-- Hero section -->
<section>
  <div class="container text-center my-5">
    <span class="mt-5 mb-4 d-block">The blog</span>
    <h1 class="mb-4">Writings form the world!</h1>
    <p>The latest news, thoughts, and ideas.</p>
  </div>
</section>
<!-- Hero blog -->
<section class="main-blog-section">
  <div class="container">
    <div class="main-blog">
      <div class="overlay">
        <div class="writer">
          <a href="#">Mohammad Khoulani</a>
          <span> - Feb 21, 2023</span>
        </div>
        <h2><a href="#">How to build a blog with Bootstrap</a></h2>
        <p>
          Bootstrap is a free and open-source CSS framework directed at
          responsive, mobile-first front-end web development.
        </p>
        <a class="category" href="#">Development</a>
      </div>
    </div>
  </div>
</section>

<!-- blogs section -->
<section class="blogs">
  <div class="container">
    <h2>Blogs</h2>
    <div class="d-flex justify-content-between align-items-center">
      <div class="categories">
        <a href="#" class="active">All</a>
        <% categories.forEach(ct => { %>
        <a href="#"><%= ct %></a>
        <% }) %>
      </div>
      <div class="sort">
        Sort By
        <select>
          <option value="newst">Newst</option>
          <option value="newst">Popularity</option>
          <option value="newst">Newst</option>
        </select>
      </div>
    </div>
  </div>
  <div class="container my-5">
    <div class="row">
      <% posts.forEach(post => { %>
      <div class="col-md-4">
        <div class="blog">
          <div class="image">
            <img src="images/blog1.jpg" class="w-100" alt="" />
            <span class="category"><%= post.category %></span>
          </div>
          <div class="d-flex date align-items-center">
            <span><%= post.createdAt %></span>
            <span class="seperator"></span>
            <span>10 min read</span>
          </div>
          <h2><a href="#"><%= post.title %></a></h2>
          <p><%= post.content %></p>
          <div class="writer d-flex align-items-center">
            <img
              src="https://avatar.iran.liara.run/username?username=Mohammad+Khoulani"
              class="avatar"
              alt=""
            />
            <a href="#"><%= post.user.firstName %> <%= post.user.lastName %></a>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
  </div>

  <div class="pagination d-flex justify-content-center">
    <a href="#"><i class="fa-solid fa-chevron-left"></i></a>
    <a href="#" class="active">1</a>
    <a href="#">2</a>
    <a href="#">3</a>
    <a href="#">4</a>
    <a href="#"><i class="fa-solid fa-chevron-right"></i></a>
  </div>
</section>

<!-- stats -->
<section class="stats">
  <div class="container text-center">
    <div class="row">
      <div class="col-md-5">
        <div class="show-more">
          <div class="overlay"></div>
          <div class="content">
            <h2>Explore more articles from our blog, and get your self in</h2>
            <p>This is the future of blogging</p>
            <a href="#" class="">Explore More</a>
          </div>
        </div>
        <div class="stat">
          <div class="overlay"></div>
          <div class="content">
            <h2>Available Articles</h2>
            <h1>120</h1>
          </div>
        </div>
      </div>

      <div class="col-md-7">
        <div class="banner">
          <h2>Beyond simple blog, create your own memories with us.</h2>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include('./partials/footer') %>
